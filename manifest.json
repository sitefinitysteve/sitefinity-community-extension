{
  "manifest_version": 3,
  "name": "Sitefinity Community",
  "version": "1.1.0",
  "description": "Unofficial community extension for Sitefinity development tools - API testing, site analysis, and developer utilities",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "devtools_page": "dist/devtools.html",
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}